<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pwd.mavenTest.dao.user.UserDao">

	<resultMap type="com.pwd.mavenTest.model.user.User" id="userMap">
		<result column="user_name" property="userName"/>
		<result column="user_password" property="userPassword"/>
		<result column="create_time" property="createTime"/>
	</resultMap>

	<select id="getUserById" resultMap="userMap">
		select
		id,user_name,user_password,create_time from user where id = #{id} limit 1
	</select>
	
	<select id="getUsers" resultMap="userMap" parameterType="com.pwd.mavenTest.model.user.User">
		select
		id,user_name,user_password,create_time from user
		<where>
			<if test="userName!='' and userName!=null">
				user_name = #{userName}
			</if>
		</where>
		
	</select>
	
</mapper>